<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="row "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/row_reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="row_reverse"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/column"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="column "
        android:textAllCaps="false" />

    <Button
        android:id="@+id/column_reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:onClick="onClick"
        android:text="column_reverse "
        android:textAllCaps="false" />

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/flexLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        app:alignContent="flex_start"
        app:alignItems="flex_start">

        <TextView
            android:id="@+id/tx1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#BEEDC7"
            android:gravity="center"
            android:text="1" />

        <TextView
            android:id="@+id/tx2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#A0EEE1"
            android:gravity="center"
            android:text="2" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#19CAAD"
            android:gravity="center"
            android:text="3" />


    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>