<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:background="@mipmap/shake_pop_bg"
              android:gravity="center"
              android:orientation="vertical"
              >

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="26dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/ic_share_dialog_close"
            android:visibility="gone" />


        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/shake_pop_card_bg" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#b87b57"
            android:text="已经没有次数了，明天再来吧！"
            android:textSize="16sp"
            android:layout_marginTop="35dp"
             />

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="#b87b57"
            android:text="(红包已到会员金额)"
            android:layout_below="@+id/tvTitle"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:visibility="invisible"
            />

        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            >

            <ImageView
                android:id="@+id/iv_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/shake_card"/>

            <TextView
            android:id="@+id/tv_award"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="35dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#fff438"
            android:visibility="invisible"
            />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pop_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@+id/iv_image"
            android:layout_marginBottom="40dp"
            android:scaleType="fitXY"
            android:gravity="center"
            android:background="@mipmap/shake_pop_btn">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="确定"
                android:textSize="18sp"
                android:textColor="#fff"/>
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>
